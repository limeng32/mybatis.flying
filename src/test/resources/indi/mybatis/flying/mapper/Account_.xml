<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="indi.mybatis.flying.mapper.AccountMapper">
	<cache ${mybatis.cache}/>

	<select id="selectWithoutCache" resultMap="result" useCache="false">
		flying#{?}(smartDataSource1:testdb):select:noPassword
	</select>

	<select id="select" resultMap="result">
		flying#{?}:select:noPassword
	</select>

	<select id="selectEverything" resultMap="result">
		flying#{?}:select
	</select>

	<select id="selectWithoutRole" resultMap="result">
		flying#{?}:select:noRole
	</select>

	<select id="selectAll" resultMap="result">
		flying:selectAll:noPassword
	</select>

	<select id="selectAllEverything" resultMap="result">
		flying:selectAll
	</select>

	<select id="selectOne" resultMap="result">
		flying:selectOne:noPassword
	</select>

	<select id="count" resultType="int">
		flying:count
	</select>

	<insert id="insert" useGeneratedKeys="true" keyProperty="id">
		flying:insert
	</insert>

	<insert id="insertSnowFlake">
		flying:insert(indi.mybatis.flying.keyHandler.DistributedSnowflakeKeyGenerator)
	</insert>

	<update id="update">
		flying:update
	</update>

	<update id="updatePersistent">
		flying:updatePersistent
	</update>

	<delete id="delete">
		flying:delete
	</delete>

	<select id="selectDirect" resultMap="result">
		select * from account_ where
		id = #{id}
	</select>

	<select id="selectAllDirect" resultMap="result">
		select * from account_
		where name = #{name} and email = #{email}
	</select>

	<select id="selectAccountByRole" resultMap="result">
		select account_0.*
		from account_ as account_0 left join role_ as role_1 on
		account_0.role_id = role_1.id where role_1.id = #{role_id}
	</select>

	<resultMap id="result" type="Account_" autoMapping="true">
		<id property="id" column="id" />
		<association property="role" javaType="Role_"
			select="indi.mybatis.flying.mapper.RoleMapper.selectWithoutCache" column="role_id" />
		<association property="roleDeputy" javaType="Role_"
			select="indi.mybatis.flying.mapper.RoleMapper.selectWithoutCache" column="deputy_id" />
	</resultMap>
</mapper>
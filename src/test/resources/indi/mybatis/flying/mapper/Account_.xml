<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="indi.mybatis.flying.mapper.AccountMapper">
	<cache ${mybatis.cache} />

	<select id="selectWithoutCache" resultMap="result"
		useCache="false">
		flying#{?}:{"action":"select", "ignore":"noPassword",
		"dataSource":"smartDataSource1", "connectionCatalog":"testdb"}
	</select>

	<select id="select" resultMap="result">
		flying#{?}:{"action":"select",
		"ignore":"noPassword"}
	</select>

	<select id="selectAsd" resultMap="asd_result">
		flying#{?}:{"action":"select","ignore":"noPassword",
		"prefix":"asd_"}
		<!-- select id as asd_id, name as asd_name, email as asd_email, password 
			as asd_password, opLock as asd_opLock, status as asd_status, activated as 
			asd_activated, activateValue as asd_activateValue from account_ where id 
			= #{id}; -->
	</select>

	<select id="selectEverything" resultMap="result">
		flying#{?}:{"action":"select"}
	</select>

	<select id="selectWithoutRole" resultMap="result">
		flying#{?}:{"action":"select", "ignore":"noRole"}
	</select>

	<select id="selectAll" resultMap="result">
		flying:{"action":"selectAll",
		"ignore":"noPassword"}
	</select>

	<select id="selectAllAsd" resultMap="asd_result">
		flying:{"action":"selectAll", "ignore":"noPassword", "prefix":"asd_", "properties":{
			"permission":{"id":"indi.mybatis.flying.mapper.PermissionMapper.select", "prefix":"prefix1_"},
			"property2":{"prefix":"prefix2_", "ignore":"tag2","id":"select"},
			"property3":{"prefix":"prefix3_"}
		}}
	</select>

	<select id="selectAllEverything" resultMap="result">
		flying:{"action":"selectAll"}
	</select>

	<select id="selectOne" resultMap="result">
		flying:{"action":"selectOne",
		"ignore":"noPassword"}
	</select>

	<select id="count" resultType="int">
		flying:{"action":"count"}
	</select>

	<select id="countAsd" resultType="int">
		flying:{"action":"count",
		"prefix":"asd_"}
	</select>

	<insert id="insert" useGeneratedKeys="true" keyProperty="id">
		flying:{"action":"insert"}
	</insert>

	<insert id="insertSnowFlake">
		flying:{"action":"insert",
		"keyGenerator":"indi.mybatis.flying.keyHandler.DistributedSnowflakeKeyGenerator"}
	</insert>

	<update id="update">
		flying:{"action":"update"}
	</update>

	<update id="updatePersistent">
		flying:{"action":"updatePersistent"}
	</update>

	<delete id="delete">
		flying:{"action":"delete"}
	</delete>

	<select id="selectDirect" resultMap="result">
		select * from account_ where
		id = #{id}
	</select>

	<select id="selectAllDirect" resultMap="result">
		select * from account_
		where name = #{name} and email = #{email}
	</select>

	<select id="selectAccountByRole" resultMap="result">
		select account_0.*
		from account_ as account_0 left join role_ as role_1 on
		account_0.role_id = role_1.id where role_1.id = #{role_id}
	</select>

	<select id="selectCheckHealth" resultType="int">
		select 1;
	</select>

	<resultMap id="result" type="Account_" autoMapping="true">
		<id property="id" column="id" />
		<association property="role" javaType="Role_"
			select="indi.mybatis.flying.mapper.RoleMapper.selectWithoutCache"
			column="role_id" />
		<association property="roleDeputy" javaType="Role_"
			select="indi.mybatis.flying.mapper.RoleMapper.selectWithoutCache"
			column="deputy_id" />
		<association property="permission" javaType="Permission"
			select="indi.mybatis.flying.mapper.PermissionMapper.select"
			column="permission_id" />
	</resultMap>

	<resultMap type="Account_" id="asd_result" autoMapping="true">
		<id property="id" column="asd_id" />
		<result property="name" column="asd_name" />
		<result property="email" column="asd_email" />
		<result property="password" column="asd_password" />
		<result property="opLock" column="asd_opLock" />
		<result property="status" column="asd_status" />
		<result property="activated" column="asd_activated" />
		<result property="activateValue" column="asd_activateValue" />
		<association property="permission"
			resultMap="indi.mybatis.flying.mapper.PermissionMapper.result"
			columnPrefix="asd_prefix1_" />
	</resultMap>
</mapper>
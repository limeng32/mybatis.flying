<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="indi.mybatis.flying.mapper.RoleMapper">
	<cache ${mybatis.cache}/>

	<select id="selectWithoutCache" resultMap="result" useCache="false">
		flying#{?}:{"action":"select", "dataSource":"smartDataSource1", "connectionCatalog":"testdb"}
	</select>

	<select id="select" resultMap="result">
		flying#{?}:{"action":"select", "dataSource":"smartDataSource1", "connectionCatalog":"testdb"}
	</select>

	<select id="selectEverything" resultMap="result">
		flying#{?}:{"action":"select"}
	</select>

	<select id="selectNoId" resultMap="result">
		flying#{?}:{"action":"select", "ignore":"noId"}
	</select>

	<select id="selectAll" resultMap="result">
		flying:{"action":"selectAll"}
	</select>

	<select id="selectOne" resultMap="result">
		flying:{"action":"selectOne"}
	</select>

	<select id="count" resultType="int">
		flying:{"action":"count"}
	</select>

	<insert id="insert" useGeneratedKeys="true" keyProperty="id">
		flying:{"action":"insert"}
	</insert>

	<update id="update">
		flying:{"action":"update"}
	</update>

	<update id="updatePersistent">
		flying:{"action":"updatePersistent"}
	</update>

	<delete id="delete">
		flying:{"action":"delete"}
	</delete>

	<update flushCache="false" id="updateDirect">
		update role_ set
		name = #{name}
		where id = #{id}
	</update>

	<resultMap id="result" type="Role_" autoMapping="true">
		<id property="id" column="id" />
	</resultMap>
</mapper>